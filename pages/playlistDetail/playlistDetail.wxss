.rCHeader {
  height: 400rpx;
  width: 100%;
  overflow: hidden;
}

.rCHeader .bg {
  width: 100%;
  position: relative;
  top: -80rpx;
  filter: blur(5px);
}

.coverContainer {
  position: absolute;
  left: 105rpx;
  top: 60rpx;
  background-color: rgba(156, 149, 149, .5);
  display: flex;
  flex-direction: column;
  width: 540rpx;
  height: 280rpx;
  font-size: 25rpx;
  border-radius: 10rpx;
}

.imageContainer {
  display: flex;
  /* height: 80%; */
}

.imageContainer text {
  max-width: 260rpx;
  margin-top: 20rpx;
}

.coverContainer image {
  width: 230rpx;
  border: 3rpx solid #fff;
  margin: 20rpx;
}
 
.dpt {
  font-size: 20rpx;
  position: absolute;
  left: 270rpx;
  top: 170rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  text-overflow: ellipsis;
}

.listHeader {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border-radius: 15rpx;
  position: relative;
  top: -20rpx;
  z-index: 10;
  background-color: #fff;
}

.listHeader view {
  display: flex;
  font-size: 30rpx;
  align-items: center;
}

.listHeader .left {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.listHeader .right {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.listHeader .iconfont {
  margin-right: 10rpx;
}

.listHeader .icon-liebiao {
  font-size: 40rpx;
}

.scrollItem {
  display: flex;
  padding: 0 15rpx;
}

.scrollItem image {
  width: 80rpx;
  border-radius: 10rpx;
}

.scrollItem view {
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.scrollItem text {
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 10rpx;
}

.scrollItem .iconfont {
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  right: 15rpx;
  text-align: right;
  line-height: 80rpx;
}

.listBody .acd {
  height: calc(100vh - 180rpx);
}