.banners {
  height: 300rpx;
  width: 100%;
}

swiper-item image {
  width: 100%;
}

.navContainer {
  display: flex;
  padding-bottom: 40rpx;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #dd001b;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

.scrollContainer {
  padding: 0 40rpx;
}

.header {
  margin: 10rpx 0;
}

.title {
  font-size: 37rpx;
}

.more {
  float: right;
  border: 1rpx solid #666;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 2rpx 20rpx;
}

.scrollRecommend {
  display: flex;
  height: 280rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.scrollItem text {
  margin-right: 20rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.newestContainer {
  padding: 40rpx;
}